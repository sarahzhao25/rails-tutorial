<h1>Portfolio Items</h1>

<a href="portfolios/new">Create New Portfolio</a>

<%= link_to "Create New Item", new_portfolio_path %>

<%= link_to "Where will this go?", new_portfolio_url %>
<p>
<%= new_portfolio_path %>
</p>

<p>
<%= new_portfolio_url %>
</p>

<% @portfolio_items.each do |portfolio_item| %>
  <%= link_to "Edit this item", edit_portfolio_path(portfolio_item.id) %>
  <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %></p>
  <%= link_to "Delete this item", portfolio_path(portfolio_item), method: :delete %>
  <p><%= portfolio_item.subtitle%></p>
  <p><%= portfolio_item.body%></p>
  <%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %>
<% end %>
